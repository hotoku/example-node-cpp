{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "lib": ["esnext"],
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "target": "es6",
    "types": ["node", "mocha", "chai"],
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "binding": ["lib/binding"]
    },
    "allowJs": true,
    "esModuleInterop": true
  },
  "include": ["lib/**/*", "test/**/*"]
}
